<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- css link -->
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href='/css/index.css'>
  <!-- fonts link -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,700;0,900;1,400;1,700&display=swap"
    rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
    rel="stylesheet">

  <title>DevSync - Project Management Tool</title>

</head>

<!-- TODO: inspiration from wrike -->
<!-- don't forget to use template for better design -->

<body>
  <!-- header -->
  <%- include('partials/header') %>

    <main>
      <section class="hero">
        <div class="logo-container reveal">
          <img src="/images/vectorlgo.png" alt="" class="">
        </div>
        <h1 class="hero-title reveal">Welcome to DevSync</h1>
        <p class="hero-subtitle reveal">Streamline Your Development Workflow</p>
        <% if (typeof user !=='undefined' && user) { %>
          <a href="/profile" class="cta-button reveal">View Your Projects</a>
          <% } else { %>
            <a href="/login" class="cta-button reveal">Get Started</a>
            <% } %>
      </section>

      <section class="features">
        <div class="feature-card reveal" style="--delay: 1">
          <h3>Project Management</h3>
          <p>Organize and track your development projects with ease using our intuitive kanban board system.</p>
        </div>
        <div class="feature-card reveal" style="--delay: 2">
          <h3>Team Collaboration</h3>
          <p>Work seamlessly with your team members, share updates, and track progress in real-time.</p>
        </div>
        <div class="feature-card reveal" style="--delay: 3">
          <h3>Task Tracking</h3>
          <p>Keep track of tasks, set priorities, and monitor deadlines to ensure project success.</p>
        </div>
      </section>
    </main>

    <!-- testimonials section -->
    <section class="testimonials">
      <h1 class="reveal">Testimonials from our customer</h1>
      <div>
        <div class="testimonial-card reveal">
          <div>
            <p>"Innovation starts with organization."</p>
            <span></span>
          </div>
          <div>
            <img src="./images/techmeeting.png" alt="">
          </div>
        </div>
      </div>
    </section>
    <!-- contact-us section -->
    <section class="contact-us reveal">
      <h1>Contact Us</h1>
      <p>Try our powerful project management software for free</p>
      <form>
        <input type="text" name="customer" value="" placeholder="Enter business email">
        <button type="submit">Try for free</button>
      </form>
    </section>
    <!-- footer -->
    <%- include('partials/footer') %>

      <script>
        // Reveal on scroll functionality
        function reveal() {
          const reveals = document.querySelectorAll('.reveal');

          for (let i = 0; i < reveals.length; i++) {
            const windowHeight = window.innerHeight;
            const elementTop = reveals[i].getBoundingClientRect().top;
            const elementVisible = 150;

            if (elementTop < windowHeight - elementVisible) {
              reveals[i].classList.add('active');
            } else {
              reveals[i].classList.remove('active');
            }
          }
        }

        // Add scroll event listener
        window.addEventListener('scroll', reveal);

        // Initial check for elements in view
        reveal();
      </script>
</body>

</html>