  <body onload="init()">
    <!-- header -->
    <%- include('partials/header') %>

    <!-- Form to create new boxes -->
    <form id="createBoxForm">
        <div class="form-group">
            <label for="boxContent">Box Content</label>
            <input type="text" id="boxContent" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Create Box</button>
    </form>
