<html lang="en">
<style>
    #addUserModal {
        position: fixed;
    }

    .close-btn {
        position: absolute;
        right: 10px;
        top: 10px;
        font-size: 24px;
        cursor: pointer;
        color: #666;
        transition: color 0.2s;
    }

    .close-btn:hover {
        color: #000;
    }
</style>



<button type="button" class="btn btn-primary" id="addUserModalTrigger">>Add a User</button>
<div class="modal modalWrapper">
    <form id="addUserForm" class="modal-content">
        <h2> Add new users to your project.</h2>
        <span class="close">&times;</span>
        <div class="form-group">
            <label for="userEmail">Email:</label>
            <input type="email" id="userEmail" autocomplete required>
        </div>
        <div class="form-group">
            <label for="documentContent">User Type:</label>
            <select id="UserORAdmin" required>
                <option value="userId">User</option>
                <option value="adminId">Admin</option>
            </select>
        </div>
        <button type="submit">Add Colleague</button>
    </form>
</div>